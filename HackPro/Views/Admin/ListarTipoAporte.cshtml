<link rel="stylesheet" href="~/Content/plugins/datatables/dataTables.bootstrap.css">
<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>

@{
    ViewBag.Title = "Tipos de Aportes";
    ViewBag.TitleHead = "Tipos de Aportes";
}

<!-- Main content -->

<div class="box">
    <div class="box-header">

    </div><!-- /.box-header -->
    <div class="box-body pad table-responsive">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @Html.Raw(ViewBag.HtmlStr)

            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Opciones</th>
                </tr>
            </tfoot>
        </table>

        <script>
            $(function () {
                //$("#example1").DataTable();
                $('#example1').DataTable({
                    "paging": true,
                    "lengthChange": false,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false
                });
            });

            function eliminar(id) {
                var status = confirm("Confirme eliminacion de Usuario con Id: " + id);
                if (status === true) {
                    window.location.href = "/Admin/DeleteTipoAporte?id=" + id;
                }
            }

            function mostrar(id) {
                window.location.href = "/Admin/Index";
            }

            function editar(id) {
                window.location.href = "/Admin/EditarTipoAporte?id=" + id;
            }
        </script>
    </div><!-- /.box-body -->
</div><!-- /.box -->
